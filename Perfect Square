import java.util.*;

public class Main
{
	public static void main(String[] args) {
	    Scanner sc = new Scanner(System.in);
	    int n;
	    double sq; 
		System.out.println("To find whether given number is perfect square or not");
		System.out.println();
		System.out.println("Enter value for n :");
		n=sc.nextInt();
		sq=Math.sqrt(n);
		if(sq == Math.round(sq))
		    System.out.println(n+" is a perfect square");
		else
		    System.out.println(n+" is not a perfect square");
		    
		sc.close();
	}
}
